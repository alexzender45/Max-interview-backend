{
    "compilerOptions": {
      "esModuleInterop": true,
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "lib": ["ES2023", "DOM"],
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "types": ["node"]
    },
    "include": ["src/**/*"]
  }

  